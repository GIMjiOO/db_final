    <script>
        function addToFavorite(productId, event) {
            event.preventDefault(); // ป้องกันไม่ให้หน้าเลื่อนขึ้น

            const heartIcon = event.target;

            // ถ้ากดไปแล้ว (เป็น favorite แล้ว) ก็ไม่ต้องส่ง request ซ้ำ
            if (heartIcon.classList.contains('favorited')) {
                console.log('Product already favorited, no action needed for product ID:', productId); // log เมื่อกดซ้ำ
                return;
            }

            console.log('Adding product to favorites, Product ID:', productId); // log ก่อนการส่งคำขอ

            fetch('/favorite', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        productId
                    })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Failed to add favorite');
                    }
                    return response.json();
                })
                .then(data => {
                    // ทำให้หัวใจเปลี่ยนสีหรือเติมเต็ม (เช่นเติมสีแดง)
                    heartIcon.classList.add('favorited', 'text-danger');
                    console.log('Favorite added:', data);
                })
                .catch(error => {
                    console.error('Error adding favorite:', error);
                });

        }
    </script>





