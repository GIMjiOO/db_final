        </section>


        <section class="shop-section section-padding" id="flash-sale">
            <div class="container">
                <div class="row">

                    <div class="col-lg-12 col-12">
                        <span class="section-small-title" id="countdown-timer"></span>

                        <script>
                            function getTimeUntilMidnight() {
                                // รับเวลาปัจจุบัน
                                const now = new Date();

                                // สร้างเวลาเที่ยงคืนของวันนี้
                                const midnight = new Date(now);
                                midnight.setHours(24, 0, 0, 0); // ตั้งเวลาให้เป็นเที่ยงคืน

                                // คำนวณความต่างระหว่างตอนนี้กับเที่ยงคืนในมิลลิวินาที
                                const timeDifference = midnight - now;

                                // แปลงเวลาจากมิลลิวินาทีเป็นชั่วโมง, นาที, และวินาที
                                const hours = Math.floor(timeDifference / (1000 * 60 * 60));
                                const minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
                                const seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);

                                return {
                                    hours,
                                    minutes,
                                    seconds
                                };
                            }

                            function updateTime() {
                                // คำนวณเวลาที่เ<a href="/product/<%= product.id %>">หลือจนถึงเที่ยงคืน
                                const {
                                    hours,
                                    minutes,
                                    seconds
                                } = getTimeUntilMidnight();

                                // อัปเดตเนื้อหาของ element ด้วยคำบอกเวลา
                                document.getElementById('countdown-timer').textContent =
                                    `${hours.toString().padStart(2, '0')} Hours : ${minutes.toString().padStart(2, '0')} Minutes : ${seconds.toString().padStart(2, '0')} Seconds`;
                            }

                            // เริ่มการนับถอยหลัง
                            setInterval(updateTime, 1000);
                            updateTime(); // เรียกครั้งแรกเพื่อให้แสดงผลทันที
                        </script>



                        <h2 class="mt-2 mb-4"><span class="tooplate-red">Flash Sale</span></h2>
                    </div>

                    <% products.forEach(product => { %>
                        <div class="col-lg-4 col-12">
                            <div class="shop-thumb">
                                <div class="shop-image-wrap">
                                    <a href="/product/<%= product.id %>" onclick="logProductClick('<%= product.id %>', '<%= product.name %>')">
                                <img src="<%= product.image %>" class="shop-image img-fluid" alt="">
                              </a>
                                </div>
                                <div class="shop-body">
                                    <h4>
                                        <%= product.name %>
                                    </h4>
                                    <div class="shop-detail-bar-wrap mb-0">
                                        <div class="d-flex flex-wrap">
                                            <span class="me-2">Price:</span>
                                            <strong class="shop-pricing-text">$<%= product.price %></strong>
                                        </div>
                                        <div class="mt-2">
                                            <div class="d-flex align-items-center mt-2">
                                                <% 
                                      const rating = product.rating;
                                      const fullStars = Math.floor(rating);
                                      const halfStar = rating % 1 >= 0.25 && rating % 1 < 0.75;
                                      const emptyStars = 5 - fullStars - (halfStar ? 1 : 0);
                                    %>
                                                    <% for(let i=0; i<fullStars; i++) { %>
                                                        <i class="bi-star-fill text-warning me-1"></i>
                                                        <% } %>
                                                            <% if(halfStar) { %>
                                                                <i class="bi-star-half text-warning me-1"></i>
                                                                <% } %>
                                                                    <% for(let i=0; i<emptyStars; i++) { %>
                                                                        <i class="bi-star text-warning me-1"></i>
                                                                        <% } %>
                                                                            <span class="text-dark ms-2"><%= rating.toFixed(1) %></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>

                </div>
            </div>
        </section>

