                        <a class="menu-trigger">
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <main>
        <section class="shop-section section-padding" id="section_3">
            <div class="container">
                <div class="row">

                    <% products.forEach(product => { %>
                        <div class="col-lg-4 col-12">
                            <div class="shop-thumb">
                                <div class="shop-image-wrap">
                                    <a href="/3-product_detail/<%= product.id %>">
                                        <!-- ลิงก์ไปยังหน้ารายละเอียดของสินค้า -->
                                        <img src="<%= product.imagePath %>" class="shop-image img-fluid" alt="">
                                    </a>
                                    <div class="shop-icons-wrap">
                                        <div class="shop-icons d-flex flex-column align-items-center">
                                            <a href="#" class="shop-icon bi-heart" onclick="addToFavorite('<%= product.id %>', event)"></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="shop-body">
                                    <h4>
                                        <%= product.name %>
                                    </h4>
                                    <div class="shop-detail-bar-wrap mb-0">
                                        <div class="d-flex flex-wrap">
                                            <span class="me-2">Price:</span>
                                            <strong class="shop-pricing-text">$<%= product.price %></strong>
                                        </div>
                                        <div class="mt-2 d-flex align-items-center">
                                            <% 
                                            const rating = product.rating || 0;
                                            const full = Math.floor(rating);
                                            const half = rating % 1 >= 0.25 && rating % 1 < 0.75;
                                            const empty = 5 - full - (half ? 1 : 0);
                                            %>
                                                <% for (let i = 0; i < full; i++) { %>
                                                    <i class="bi-star-fill text-warning me-1"></i>
                                                    <% } %>
                                                        <% if (half) { %>
                                                            <i class="bi-star-half text-warning me-1"></i>
                                                            <% } %>
                                                                <% for (let i = 0; i < empty; i++) { %>
                                                                    <i class="bi-star text-warning me-1"></i>
                                                                    <% } %>
                                                                        <span class="text-dark ms-2"><%= rating.toFixed(1) %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>

                </div>
        </section>


    </main>

    <footer>
        <div class="container">
            <div class="col-lg-12">
                <p>Contact Us: <a href="mailto:Juno.Shop@gmail.com">Juno.Shop@gmail.com</a></p>
            </div>
        </div>
    </footer>

