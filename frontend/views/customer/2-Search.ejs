    <script>
        function addToFavorite(productId, event) {
            event.preventDefault(); // ป้องกันไม่ให้หน้าเลื่อนขึ้น

            const heartIcon = event.target;

            // ล็อกข้อมูลการคลิก
            console.log('Product ID:', productId); // เช็คว่า productId ที่ถูกคลิกคืออะไร
            console.log('Heart icon:', heartIcon); // เช็คองค์ประกอบของไอคอนที่ถูกคลิก

            // ถ้ากดไปแล้ว (เป็น favorite แล้ว) ก็ไม่ต้องส่ง request ซ้ำ
            if (heartIcon.classList.contains('favorited')) {
                console.log('Already favorited, no action needed');
                return;
            }

            fetch('/favorite', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        productId
                    })
                })
                .then(response => {
                    if (response.ok) {
                        console.log('Successfully added to favorite'); // แจ้งว่าเพิ่มสำเร็จ
                        heartIcon.classList.remove('bi-heart');
                        heartIcon.classList.add('bi-heart-fill', 'favorited'); // เพิ่มทั้ง icon fill และสถานะ
                    } else {
                        console.log('Error adding to favorite');
                        alert('Error adding to favorite');
                    }
                });
        }
    </script>


</body>

